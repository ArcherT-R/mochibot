<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Dashboard</title>
  <link rel="stylesheet" href="/styles.css">
  <script>
    async function searchPlayers() {
      const input = document.getElementById('player-search').value.trim();
      const resultsContainer = document.getElementById('search-results');
      resultsContainer.innerHTML = '';

      if (!input) return;

      try {
        const res = await fetch(`/dashboard/search?username=${encodeURIComponent(input)}`);
        const players = await res.json();

        if (players.length === 0) {
          resultsContainer.innerHTML = '<li>No results found</li>';
          return;
        }

        players.forEach(p => {
          const li = document.createElement('li');
          li.innerHTML = `
            <a href="/dashboard/player/${p.username}">
              <img src="${p.avatar_url}" alt="${p.username}" width="30" height="30">
              ${p.username} (${p.group_rank || 'No rank'})
            </a>
          `;
          resultsContainer.appendChild(li);
        });
      } catch (err) {
        console.error('Search error:', err);
        resultsContainer.innerHTML = '<li>Error fetching results</li>';
      }
    }
  </script>
</head>
<body>
  <header>
    <h1>Dashboard</h1>
  </header>

  <section>
    <h2>Top Players</h2>
    <ul>
      <% if (topPlayers && topPlayers.length > 0) { %>
        <% topPlayers.forEach(player => { %>
          <li>
            <a href="/dashboard/player/<%= player.username %>">
              <img src="<%= player.avatar_url %>" alt="<%= player.username %>" width="50" height="50">
              <strong><%= player.username %></strong> - <%= player.weekly_minutes || 0 %> min this week
            </a>
          </li>
        <% }) %>
      <% } else { %>
        <li>No players to display</li>
      <% } %>
    </ul>
  </section>

  <section>
    <h2>Search Players</h2>
    <input
      type="text"
      id="player-search"
      placeholder="Search by username..."
      oninput="searchPlayers()"
      autocomplete="off"
    >
    <ul id="search-results"></ul>
  </section>
</body>
</html>
