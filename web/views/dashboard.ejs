<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Mochi Bar Dashboard</title>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Roboto', sans-serif;
      margin: 0;
      background: #ffffff;
      color: #000;
    }

    header {
      background: #42b4ff;
      color: black;
      font-weight: 700;
      font-size: 48px;
      padding: 25px 40px;
      text-align: left;
      border-bottom: 2px solid #b267f7;
    }

    .container {
      max-width: 1200px;
      margin: 30px auto;
      padding: 0 20px;
      display: flex;
      flex-direction: column;
      gap: 40px;
    }

    h2 {
      font-size: 26px;
      font-weight: 700;
      margin-bottom: 20px;
      text-align: center;
    }

    /* üèÜ Leaderboard */
    .leaderboard {
      display: flex;
      justify-content: center;
      gap: 20px;
      flex-wrap: wrap;
    }

    .leaderboard-card {
      background: #d9d9d9;
      flex: 1;
      min-width: 250px;
      max-width: 300px;
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 20px;
      text-align: center;
      border-radius: 8px;
      box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }

    .leaderboard-rank {
      font-size: 22px;
      font-weight: 700;
      margin-bottom: 5px;
    }

    .leaderboard-card img {
      width: 100px;
      height: 100px;
      border-radius: 50%;
      margin-bottom: 10px;
    }

    .leaderboard-name {
      font-size: 18px;
      font-weight: 600;
      margin-bottom: 5px;
    }

    .leaderboard-minutes {
      font-size: 16px;
    }

    /* üìÖ Upcoming Shifts */
    .shifts-list {
      display: flex;
      flex-direction: column;
      gap: 15px;
    }

    .shift-item {
      background: #d9d9d9;
      padding: 15px;
      border-radius: 6px;
      font-size: 16px;
      font-weight: 500;
      box-shadow: 0 1px 4px rgba(0,0,0,0.1);
    }

    .shift-time {
      font-weight: 700;
      color: #42b4ff;
      display: block;
      margin-bottom: 5px;
    }

    .no-data {
      background: #f2f2f2;
      padding: 15px;
      text-align: center;
      border-radius: 6px;
      font-weight: 500;
      color: #555;
    }

    @media (max-width: 600px) {
      header {
        font-size: 36px;
        padding: 20px;
      }

      .leaderboard-card img {
        width: 80px;
        height: 80px;
      }
    }
  </style>
</head>
<body>

<header>Mochi Bar Dashboard</header>

<div class="container">

  <!-- üèÜ Top 3 Players -->
  <section>
    <h2>Top 3 Active Players This Week</h2>
    <div class="leaderboard">
      <% if (topPlayers && topPlayers.length > 0) { %>
        <% topPlayers.slice(0, 3).forEach((p, index) => { %>
          <div class="leaderboard-card">
            <div class="leaderboard-rank">#<%= index + 1 %></div>
            <img src="https://www.roblox.com/headshot-thumbnail/image?userId=<%= p.robloxId %>&width=100&height=100&format=png" alt="Avatar">
            <div class="leaderboard-name"><%= p.username %></div>
            <div class="leaderboard-minutes"><%= p.total_minutes %> minutes</div>
          </div>
        <% }) %>
      <% } else { %>
        <div class="no-data" style="width:100%;">No leaderboard data available.</div>
      <% } %>
    </div>
  </section>

  <!-- üìÖ Upcoming Shifts -->
  <section>
    <h2>Upcoming Shifts (Discord)</h2>
    <div id="shiftsList" class="shifts-list">
      <div class="no-data">Loading upcoming shifts...</div>
    </div>
  </section>

</div>

<script>
  // Format shift time from UNIX
  function formatShiftTime(timestamp) {
    const d = new Date(timestamp * 1000);
    const dateStr = d.toLocaleDateString(undefined, { weekday: 'short', month: 'short', day: 'numeric' });
    const timeStr = d.toLocaleTimeString(undefined, { hour: '2-digit', minute: '2-digit', timeZoneName: 'short' });
    return `${dateStr} @ ${timeStr}`;
  }

  async function loadShifts() {
    const list = document.getElementById('shiftsList');
    list.innerHTML = `<div class="no-data">Fetching data from Discord...</div>`;

    try {
      const res = await fetch('/sessions');
      const sessions = await res.json();
      const now = Math.floor(Date.now() / 1000);
      const upcoming = sessions.filter(s => s.time > now).sort((a, b) => a.time - b.time);

      if (upcoming.length === 0) {
        list.innerHTML = `<div class="no-data">No upcoming shifts are currently scheduled.</div>`;
        return;
      }

      list.innerHTML = '';
      upcoming.forEach(session => {
        const div = document.createElement('div');
        div.className = 'shift-item';
        let hosts = `Host: ${session.host}`;
        if (session.cohost) hosts += ` | Co-Host: ${session.cohost}`;
        div.innerHTML = `
          <span class="shift-time">${formatShiftTime(session.time)}</span>
          ${hosts}
          ${session.overseer ? `<br>Overseer: ${session.overseer}` : ''}
        `;
        list.appendChild(div);
      });
    } catch (err) {
      console.error(err);
      list.innerHTML = `<div class="no-data" style="color:red;">Failed to load shifts.</div>`;
    }
  }

  loadShifts();
</script>

</body>
</html>
