Â  Â  Â  // Check if startTime is valid
Â  Â  Â  const sessionStartTimeMs = new Date(startTime).getTime(); 
Â  Â  Â  if (!isNaN(sessionStartTimeMs)) {
Â  Â  Â  Â  const elapsedMs = Date.now() - sessionStartTimeMs;
