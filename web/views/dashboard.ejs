<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Dashboard</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f6f8;
      margin: 0;
    }
    .top-bar {
      background-color: #1E90FF;
      color: white;
      padding: 15px 20px;
      font-size: 1.5em;
    }
    .container {
      max-width: 1000px;
      margin: 20px auto;
      padding: 0 20px;
    }
    .search-bar {
      margin-bottom: 20px;
      display: flex;
    }
    .search-bar input {
      flex: 1;
      padding: 10px;
      font-size: 1em;
      border-radius: 5px 0 0 5px;
      border: 1px solid #ccc;
    }
    .search-bar button {
      padding: 10px 15px;
      border: none;
      background-color: #1E90FF;
      color: white;
      font-size: 1em;
      cursor: pointer;
      border-radius: 0 5px 5px 0;
    }
    .players-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
      gap: 20px;
    }
    .player-card {
      background: white;
      border-radius: 10px;
      box-shadow: 0 2px 6px rgba(0,0,0,0.1);
      padding: 15px;
      text-align: center;
      transition: transform 0.2s;
    }
    .player-card:hover {
      transform: translateY(-5px);
    }
    .player-card img {
      border-radius: 50%;
      margin-bottom: 10px;
    }
    .player-card h3 {
      margin: 10px 0 5px 0;
      font-size: 1.2em;
    }
    .player-card p {
      margin: 2px 0;
      font-size: 0.95em;
    }
  </style>
</head>
<body>
  <div class="top-bar">Player Dashboard</div>
  <div class="container">

    <!-- Search bar -->
    <div class="search-bar">
      <input type="text" id="searchInput" placeholder="Search players by username...">
      <button onclick="performSearch()">Search</button>
    </div>

    <!-- Players grid -->
    <div class="players-grid" id="playersGrid">
      <% topPlayers.forEach(player => { %>
        <div class="player-card">
          <img src="https://thumbnails.roblox.com/v1/users/avatar-headshot?userIds=<%= player.roblox_id %>&size=150x150&format=Png&isCircular=true" alt="<%= player.username %>">
          <h3><a href="/dashboard/player/<%= player.username %>"><%= player.username %></a></h3>
          <p>Rank: <%= player.group_rank %></p>
          <p>Weekly Minutes: <%= player.weekly_minutes %></p>
        </div>
      <% }) %>
    </div>
  </div>

  <script>
    async function performSearch() {
      const query = document.getElementById('searchInput').value;
      if (!query) return;
      const res = await fetch(`/dashboard/search?username=${encodeURIComponent(query)}`);
      const players = await res.json();
      const grid = document.getElementById('playersGrid');
      grid.innerHTML = '';
      players.forEach(player => {
        const div = document.createElement('div');
        div.className = 'player-card';
        div.innerHTML = `
          <img src="https://thumbnails.roblox.com/v1/users/avatar-headshot?userIds=${player.roblox_id}&size=150x150&format=Png&isCircular=true" alt="${player.username}">
          <h3><a href="/dashboard/player/${player.username}">${player.username}</a></h3>
          <p>Rank: ${player.group_rank}</p>
          <p>Weekly Minutes: ${player.weekly_minutes}</p>
        `;
        grid.appendChild(div);
      });
    }
  </script>
</body>
</html>
