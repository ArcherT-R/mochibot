<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Mochi Bar Dashboard</title>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
  <style>
    body { font-family: 'Roboto', sans-serif; margin:0; background:#f7f9fc; color:#000; }
    header {
      background: linear-gradient(90deg, #42b4ff, #1a85e6, #42b4ff, #1a85e6);
      background-size: 300% 100%;
      animation: gradientFlow 6s ease infinite;
      color:white; font-weight:700; font-size:48px; padding:25px 40px; text-align:center;
      box-shadow:0 2px 5px rgba(0,0,0,0.15);
    }

    @keyframes gradientFlow {
      0% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
      100% { background-position: 0% 50%; }
    }

    .container { max-width: 1100px; margin: 20px auto; padding: 0 20px; }
    h2 { font-size: 28px; margin-bottom: 10px; }
    .leaderboard, .players-list {
      background: white; border-radius: 12px; padding: 20px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.08); margin-bottom: 20px;
    }
    .player-item {
      display: flex; align-items: center; justify-content: space-between;
      padding: 8px 0; border-bottom: 1px solid #eee;
    }
    .player-item:last-child { border-bottom: none; }
    .player-info { display: flex; align-items: center; gap: 10px; }
    .player-info img { width: 40px; height: 40px; border-radius: 50%; }
    .minutes { font-weight: 700; }
    .search-bar { width: 100%; padding: 10px; font-size: 16px; margin-bottom: 15px; border: 1px solid #ccc; border-radius: 8px; }
  </style>
</head>
<body>
  <header>Mochi Bar Dashboard</header>
  <div class="container">

    <div class="leaderboard">
      <h2>üèÜ Top Weekly Players</h2>
      <% if (topPlayers && topPlayers.length > 0) { %>
        <% topPlayers.forEach(player => { %>
          <div class="player-item">
            <div class="player-info">
              <img src="<%= player.avatar_url %>" alt="">
              <span><%= player.username %></span>
            </div>
            <div class="minutes"><%= player.weekly_minutes || 0 %> min</div>
          </div>
        <% }) %>
      <% } else { %>
        <p>No top players found.</p>
      <% } %>
    </div>

    <div class="players-list">
      <h2>üë• All Players</h2>
      <input type="text" class="search-bar" id="playerSearch" placeholder="Search players..."/>
      <div id="playerList">
        <% if (players && players.length > 0) { %>
          <% players.forEach(player => { %>
            <div class="player-item">
              <div class="player-info">
                <img src="<%= player.avatar_url %>" alt="">
                <span><%= player.username %></span>
              </div>
              <div class="minutes"><%= player.weekly_minutes || 0 %> min</div>
            </div>
          <% }) %>
        <% } else { %>
          <p>No players found.</p>
        <% } %>
      </div>
    </div>
  </div>

  <script>
    const searchInput = document.getElementById('playerSearch');
    const playerList = document.getElementById('playerList');

    searchInput.addEventListener('input', async () => {
      const query = searchInput.value.trim();
      if (!query) {
        playerList.innerHTML = `<%= players.map(p => `
          <div class="player-item">
            <div class="player-info">
              <img src="${p.avatar_url}" alt="">
              <span>${p.username}</span>
            </div>
            <div class="minutes">${p.weekly_minutes || 0} min</div>
          </div>
        `).join('') %>`;
        return;
      }

      const res = await fetch(`/dashboard/search?username=${encodeURIComponent(query)}`);
      const results = await res.json();

      if (!results.length) {
        playerList.innerHTML = "<p>No players found.</p>";
        return;
      }

      playerList.innerHTML = results.map(p => `
        <div class="player-item">
          <div class="player-info">
            <img src="${p.avatar_url}" alt="">
            <span>${p.username}</span>
          </div>
          <div class="minutes">${p.weekly_minutes || 0} min</div>
        </div>
      `).join('');
    });
  </script>
</body>
</html>
