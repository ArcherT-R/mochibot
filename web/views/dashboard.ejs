<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Dashboard</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      background-color: #f5f7fa;
    }

    /* Blue top bar */
    .top-bar {
      background-color: #1e40af;
      color: white;
      padding: 20px;
      text-align: center;
      font-size: 24px;
      font-weight: bold;
    }

    .container {
      max-width: 1200px;
      margin: 20px auto;
      padding: 0 20px;
    }

    /* Search bar */
    .search-bar {
      margin-bottom: 20px;
      display: flex;
      justify-content: center;
    }

    .search-bar input {
      width: 100%;
      max-width: 400px;
      padding: 10px;
      font-size: 16px;
      border-radius: 6px;
      border: 1px solid #ccc;
    }

    /* Player boxes */
    .players-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
      gap: 20px;
    }

    .player-box {
      background: white;
      padding: 15px;
      border-radius: 10px;
      box-shadow: 0 3px 6px rgba(0,0,0,0.1);
      text-align: center;
      transition: transform 0.2s;
    }

    .player-box:hover {
      transform: translateY(-5px);
    }

    .player-box img {
      border-radius: 50%;
      width: 100px;
      height: 100px;
      margin-bottom: 10px;
    }

    .player-box h3 {
      margin: 5px 0;
      font-size: 18px;
    }

    .player-box p {
      margin: 3px 0;
      color: #555;
    }
  </style>
</head>
<body>
  <div class="top-bar">Dashboard</div>
  <div class="container">
    <!-- Search Bar -->
    <div class="search-bar">
      <input type="text" id="playerSearch" placeholder="Search players...">
    </div>

    <!-- Top Players -->
    <h2>Top Players</h2>
    <div class="players-grid" id="topPlayers">
      <% topPlayers.forEach(player => { %>
        <div class="player-box">
          <img src="<%= player.avatar_url %>" alt="<%= player.username %>">
          <h3><a href="/dashboard/player/<%= player.username %>"><%= player.username %></a></h3>
          <p>Rank: <%= player.group_rank %></p>
          <p>Weekly Minutes: <%= player.weekly_minutes %></p>
        </div>
      <% }) %>
    </div>

    <!-- Search Results -->
    <h2>Search Results</h2>
    <div class="players-grid" id="searchResults"></div>
  </div>

  <script>
    const searchInput = document.getElementById('playerSearch');
    const resultsDiv = document.getElementById('searchResults');

    searchInput.addEventListener('input', async () => {
      const query = searchInput.value.trim();
      if (!query) {
        resultsDiv.innerHTML = '';
        return;
      }

      try {
        const res = await fetch(`/dashboard/search?username=${encodeURIComponent(query)}`);
        const players = await res.json();

        resultsDiv.innerHTML = players.map(player => `
          <div class="player-box">
            <img src="${player.avatar_url}" alt="${player.username}">
            <h3><a href="/dashboard/player/${player.username}">${player.username}</a></h3>
            <p>Rank: ${player.group_rank}</p>
            <p>Weekly Minutes: ${player.weekly_minutes}</p>
          </div>
        `).join('');

      } catch (err) {
        console.error('Search error:', err);
      }
    });
  </script>
</body>
</html>
