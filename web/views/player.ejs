<h1><%= player.username %>'s Profile</h1>
<img src="<%= player.avatar_url %>" width="100" height="100">
<p>Group Rank: <%= player.group_rank %></p>
<p>Weekly Minutes: <%= player.weekly_minutes || 0 %></p>

<h2>Sessions</h2>
<ul>
  <% if (sessions && sessions.length > 0) { %>
    <% sessions.forEach(s => { %>
      <li>
        <%= new Date(s.session_start).toLocaleString() %> - 
        <%= new Date(s.session_end).toLocaleString() %> :
        <%= s.minutes_played %> mins
      </li>
    <% }) %>
  <% } else { %>
    <li>No sessions logged</li>
  <% } %>
</ul>
