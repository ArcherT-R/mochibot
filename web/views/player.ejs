<!DOCTYPE html>
<html>
<head>
  <title>Mochi Bar Database - Player</title>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <style>
    body {
      margin: 0;
      font-family: Arial, sans-serif;
      background-color: #f0f0f0;
    }

    /* Header */
    header {
      background-color: #5bc0de;
      padding: 20px;
      text-align: center;
      color: black;
      font-size: 2rem;
      font-weight: bold;
    }

    /* Grid Layout */
    .container {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 20px;
      padding: 20px;
      max-width: 1400px;
      margin: 0 auto;
      box-sizing: border-box;
    }

    /* Column Sections */
    .column {
      background-color: white;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
      display: flex;
      flex-direction: column;
      align-items: center;
      min-height: 600px; /* ensures all columns look even */
    }

    .section {
      width: 100%;
      background-color: #f7f7f7;
      border: 1px solid #ccc;
      border-radius: 8px;
      padding: 10px;
      text-align: center;
      margin-bottom: 15px;
      box-sizing: border-box;
    }

    .section img {
      width: 150px;
      height: 150px;
      object-fit: cover;
      border-radius: 10px;
      background-color: #ddd;
    }

    .section h3 {
      margin: 5px 0;
      font-size: 1.1rem;
    }

    hr {
      width: 100%;
      border: none;
      border-top: 2px solid black;
      margin: 10px 0;
    }

    /* Responsive */
    @media (max-width: 1000px) {
      .container {
        grid-template-columns: 1fr;
      }
    }
  </style>
</head>
<body>

  <header>
    Mochi Bar Database
  </header>

  <div class="container">
    <!-- Column 1: User Profile -->
    <div class="column">
      <div class="section">
        <h3>Username</h3>
        <img src="<%= player.avatar_url || '' %>" alt="Avatar" />
      </div>

      <div class="section">
        <h3>Group Rank</h3>
        <p><%= player.group_rank || 'Guest' %></p>
      </div>

      <div class="section">
        <h3>Notes</h3>
        <p>No notes available.</p>
      </div>
    </div>

    <!-- Column 2: In-game Activity -->
    <div class="column">
      <div class="section">
        <h3>Ongoing session? If so put here</h3>
      </div>

      <hr>

      <% if (player.sessions && player.sessions.length > 0) { %>
        <% player.sessions.forEach(session => { %>
          <div class="section">
            <h3>Past session</h3>
            <p><%= new Date(session.start).toLocaleString() %> â†’ <%= new Date(session.end).toLocaleString() %></p>
            <p><strong><%= session.minutes_played %> minutes</strong></p>
          </div>
        <% }) %>
      <% } else { %>
        <div class="section">
          <p>No past sessions recorded.</p>
        </div>
      <% } %>
    </div>

    <!-- Column 3: Shift Information -->
    <div class="column">
      <div class="section">
        <h3>Shift Attended</h3>
        <p>0</p>
      </div>

      <div class="section">
        <h3>Shift Hosted</h3>
        <p>0</p>
      </div>

      <hr>

      <div class="section">
        <h3>Shift Co/Host</h3>
        <p>No hosted shifts found.</p>
      </div>
    </div>
  </div>

</body>
</html>
