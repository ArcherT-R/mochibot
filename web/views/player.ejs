<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title><%= player.username %> â€” Mochi Bar Database</title>
  <style>
    body {
      margin: 0;
      font-family: 'Segoe UI', Tahoma, sans-serif;
      background-color: #f2f2f2;
    }

    /* Header */
    header {
      background-color: #58b4f7;
      padding: 20px;
      text-align: center;
    }
    header h1 {
      margin: 0;
      font-size: 2rem;
      color: black;
      font-weight: bold;
    }

    /* Main layout */
    .container {
      display: flex;
      gap: 20px;
      padding: 20px;
      max-width: 1400px;
      margin: 0 auto;
    }

    .column {
      flex: 1;
      display: flex;
      flex-direction: column;
      gap: 15px;
    }

    /* Box styles */
    .box {
      background-color: white;
      border-radius: 10px;
      box-shadow: 0 2px 5px rgba(0,0,0,0.1);
      padding: 15px;
    }

    .box h2 {
      margin-top: 0;
      font-size: 1.1rem;
      margin-bottom: 10px;
    }

    /* Profile column */
    .avatar {
      width: 100%;
      aspect-ratio: 1/1;
      background-color: #ddd;
      border-radius: 10px;
      background-size: cover;
      background-position: center;
    }

    /* Activity + Shifts sections */
    .divider {
      height: 1px;
      background-color: black;
      margin: 10px 0;
    }

    .session-box {
      background-color: #f9f9f9;
      border-radius: 6px;
      padding: 10px;
      border: 1px solid #ddd;
    }

    .session-box p {
      margin: 0;
      font-size: 0.9rem;
    }

    .scrollable {
      max-height: 400px;
      overflow-y: auto;
    }

    @media (max-width: 1000px) {
      .container {
        flex-direction: column;
      }
    }
  </style>
</head>
<body>
  <!-- Header -->
  <header>
    <h1>Mochi Bar Database</h1>
  </header>

  <!-- Main content -->
  <div class="container">
    <!-- Column 1: User Profile -->
    <div class="column">
      <div class="box">
        <h2>Username</h2>
        <div class="avatar" style="background-image: url('<%= player.avatar_url %>');"></div>
      </div>

      <div class="box">
        <h2>Group Rank</h2>
        <p><%= player.group_rank || "Guest" %></p>
      </div>

      <div class="box">
        <h2>Notes</h2>
        <p>No notes available yet.</p>
      </div>
    </div>

    <!-- Column 2: In-game Activity -->
    <div class="column">
      <div class="box">
        <h2>Ongoing Session?</h2>
        <p><%= player.ongoing_session ? "Yes" : "No" %></p>
        <div class="divider"></div>
        <div class="scrollable">
          <% if (sessions.length > 0) { %>
            <% sessions.forEach(session => { %>
              <div class="session-box">
                <p><strong>Start:</strong> <%= new Date(session.session_start).toLocaleString() %></p>
                <p><strong>End:</strong> <%= new Date(session.session_end).toLocaleString() %></p>
                <p><strong>Minutes:</strong> <%= session.minutes_played %></p>
              </div>
            <% }) %>
          <% } else { %>
            <p>No past sessions found.</p>
          <% } %>
        </div>
      </div>
    </div>

    <!-- Column 3: Shift Information -->
    <div class="column">
      <div class="box">
        <h2>Shift Attended</h2>
        <p>0</p>
      </div>

      <div class="box">
        <h2>Shift Hosted</h2>
        <div class="divider"></div>
        <div class="scrollable">
          <div class="session-box">
            <p>Co/Host Shift Placeholder</p>
          </div>
          <div class="session-box">
            <p>Co/Host Shift Placeholder</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
