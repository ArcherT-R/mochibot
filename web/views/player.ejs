<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title><%= player.username %> â€“ Player Profile</title>
  <link rel="stylesheet" href="/styles.css" />
  <style>
    body {
      font-family: Arial, sans-serif;
      padding: 20px;
      background: #f8f8f8;
    }

    h1 {
      margin-bottom: 10px;
    }

    .ongoing-box {
      background: #e7f7e7;
      border: 1px solid #3cb371;
      padding: 10px;
      margin-top: 10px;
      border-radius: 8px;
    }

    .divider {
      border-top: 2px solid #ccc;
      margin: 25px 0;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 10px;
      background: white;
      border-radius: 8px;
      overflow: hidden;
    }

    th, td {
      text-align: left;
      padding: 8px;
    }

    th {
      background: #f0f0f0;
      font-weight: bold;
    }

    tr:nth-child(even) {
      background: #f9f9f9;
    }
  </style>
</head>
<body>
  <h1>ðŸ‘¤ <%= player.username %></h1>
  <p><strong>Roblox ID:</strong> <%= player.roblox_id %></p>

  <!-- Ongoing Session -->
  <% if (ongoingSession) { %>
    <div class="ongoing-box">
      <strong>ðŸ’« Ongoing Session</strong><br>
      <strong>Started:</strong> <%= new Date(ongoingSession.start).toLocaleString() %><br>
      <strong>Current Duration:</strong> <span id="sessionTimer"></span>
    </div>

    <script>
      // Live timer
      const startTime = new Date("<%= ongoingSession.start %>").getTime();
      const timerEl = document.getElementById('sessionTimer');

      function updateTimer() {
        const now = Date.now();
        const diff = now - startTime;

        const hours = Math.floor(diff / 3600000);
        const minutes = Math.floor((diff % 3600000) / 60000);
        const seconds = Math.floor((diff % 60000) / 1000);

        timerEl.textContent = `${hours}h ${minutes}m ${seconds}s`;
      }

      updateTimer();
      setInterval(updateTimer, 1000);
    </script>

    <div class="divider"></div>
  <% } %>

  <!-- Past Sessions -->
  <h2>ðŸ•“ Past Sessions</h2>

  <% if (sessions.length === 0) { %>
    <p>No past sessions found.</p>
  <% } else { %>
    <table>
      <thead>
        <tr>
          <th>Start</th>
          <th>End</th>
          <th>Duration</th>
        </tr>
      </thead>
      <tbody>
        <% sessions.forEach(session => { %>
          <tr>
            <td><%= new Date(session.start).toLocaleString() %></td>
            <td><%= session.end ? new Date(session.end).toLocaleString() : 'â€”' %></td>
            <td>
              <% if (session.end) { 
                const duration = new Date(session.end) - new Date(session.start);
                const hrs = Math.floor(duration / 3600000);
                const mins = Math.floor((duration % 3600000) / 60000);
                const secs = Math.floor((duration % 60000) / 1000);
              %>
                <%= `${hrs}h ${mins}m ${secs}s` %>
              <% } else { %>
                â€”
              <% } %>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>
</body>
</html>
