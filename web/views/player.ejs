        });
        
        const timeString = date.toLocaleTimeString(undefined, { 
            hour: '2-digit', 
            minute: '2-digit',
            timeZoneName: 'short' // Show the user's timezone abbreviation
        });
        
        return `${dateString} @ ${timeString}`;
    }


